<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/Tab"
        android:orientation="vertical"
        android:background="@color/lightbrown"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/bianji"
            android:gravity="center"
            android:layout_weight="999"
            android:text="饭局编辑"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="@color/orange"
            android:layout_below="@id/bianji"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="3.8">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
        android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
        android:id="@+id/cirleimg1"
        android:clickable="true"
    android:layout_weight="1"
    android:src="@mipmap/wuming"/>
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
        android:id="@+id/cirleimg2"
        android:clickable="true"
    android:layout_weight="1"
    android:src="@mipmap/fabu_people_press"/>
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
        android:id="@+id/cirleimg3"
        android:clickable="true"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:src="@mipmap/fabu_people_press"/>
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
        android:id="@+id/cirleimg4"
        android:clickable="true"
    android:layout_height="match_parent"
    android:layout_weight="1"
        android:src="@mipmap/fabu_people_press"/>
    </LinearLayout>


    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:id="@+id/cirleimg5"
                android:clickable="true"
                android:layout_height="match_parent"
                android:src="@mipmap/fabu_people_press"/>
        </LinearLayout>
    <LinearLayout
    android:layout_width="0dp"
    android:layout_weight="2"
        android:id="@+id/linercaiyao"
        android:clickable="true"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:background="@mipmap/btn_bg150x652x"
        android:id="@+id/changedesk"
        android:clickable="true"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="10dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/changedeskshuoming"/>

    </android.support.v7.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:id="@+id/cirleimg6"
                android:clickable="true"
                android:layout_height="match_parent"
                android:src="@mipmap/fabu_people_press"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
        android:id="@+id/cirleimg7"
        android:clickable="true"
    android:layout_height="match_parent"
    android:layout_weight="1"
        android:src="@mipmap/fabu_people_press"/>
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
        android:id="@+id/cirleimg8"
        android:clickable="true"
    android:layout_weight="1"
        android:src="@mipmap/fabu_people_press"/>
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
        android:id="@+id/cirleimg9"
        android:clickable="true"
    android:layout_weight="1"
        android:src="@mipmap/fabu_people_press"/>
    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
        android:id="@+id/cirleimg10"
        android:clickable="true"
    android:layout_weight="1"
        android:src="@mipmap/fabu_people_press"/>
    </LinearLayout>


    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

    //邀约

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5">
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="299"
    android:id="@+id/linearLayout4">
    <TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="60dp"
    android:text="邀约"
    android:gravity="center|right"
    />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:text="1~2"
        android:id="@+id/yaoYueRenShu"
    android:textSize="25sp"/>
    <TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="60dp"
    android:text="人"
    />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="@color/orange"
            android:layout_below="@id/bianji"/>
</LinearLayout>


    //今天
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.5"
    android:id="@+id/linearLayout3">

    <LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
        android:id="@+id/linerriqi"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
    android:layout_height="match_parent">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="今天"
        android:id="@+id/yaoYueShiJian"
    android:gravity="center_horizontal|bottom"
    android:textSize="25sp"/>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:text="6月15号"
        android:id="@+id/yaoYueJuTiShiJian"
    android:gravity="center_horizontal"
    android:layout_weight="1"/>

    </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.005"
            android:layout_height="match_parent"
            android:background="@color/orange"
            />

    <TextView
    android:layout_width="0dp"
    android:layout_gravity="center"
        android:clickable="true"
    android:layout_weight="1"
    android:drawableTop="@mipmap/moon"
    android:gravity="center"
    android:text="晚上"
        android:id="@+id/yaoYueZaoWan"
    android:layout_height="wrap_content"
    />

        <View
            android:layout_width="0dp"
            android:layout_weight="0.005"
            android:layout_height="match_parent"
            android:background="@color/orange"
            />

    <TextView
    android:layout_width="0dp"
    android:layout_gravity="center"
        android:clickable="true"
    android:layout_weight="1"
    android:drawableTop="@mipmap/clock"
    android:gravity="center"
    android:text="六点半"
        android:id="@+id/yaoYueJiDian"
    android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5">

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="@color/orange"
            />


    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_weight="199"
    android:layout_height="0dp"
    android:layout_above="@+id/Tab1"
    android:id="@+id/linearLayout2">


    <LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
        android:id="@+id/AAZ"
        android:background="@drawable/ripple_bg"
        android:clickable="true"
    android:layout_height="match_parent">


    <TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:text="AA"
        android:id="@+id/yaoYueFangShi"
    android:textSize="25sp"
    android:gravity="fill_vertical|right"
    />

    <TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:text="制"
    android:gravity="center_vertical"
    android:layout_height="match_parent" />
    </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.002"
            android:layout_height="match_parent"
            android:background="@color/orange"
            />
    <LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
        android:clickable="true"
        android:id="@+id/linerjiage"
        android:background="@drawable/ripple_bg"
    android:layout_height="match_parent">

    <TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:text="66"
        android:id="@+id/yaoYueJiaGe"
    android:textSize="25sp"
    android:gravity="fill_vertical|right"
    />

    <TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:text="元\人"
    android:gravity="center_vertical"
    android:layout_height="match_parent" />

    </LinearLayout>
    </LinearLayout>
          </LinearLayout>

    <RelativeLayout
        android:background="@color/bg_module_more"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="0dp"
        android:clickable="true"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="下一步"
            android:id="@+id/xiaYiBu"
            android:clickable="true"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    </LinearLayout>