<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <!--tou-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.7">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="我的" android:textSize="25sp"
            android:background="#649abb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical" android:layout_height="0dp" android:layout_weight="9.0">
        <!--图-->
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2.9"
            android:background="#97b9ce">
            <!--左边头像区域-->
            <LinearLayout android:layout_width="0dp" android:layout_weight="0.8" android:orientation="vertical" android:layout_height="match_parent">
                <!--名字-->
                <TextView android:layout_width="match_parent" android:layout_height="0dp" android:text="皇家御厨" android:gravity="center|bottom" android:textSize="20sp" android:layout_weight="0.6"/>
                <!--头像-->
                <de.hdodenhof.circleimageview.CircleImageView android:layout_width="match_parent" android:layout_height="0dp" android:src="@mipmap/wuming" android:layout_weight="1.1"/>
                <!--帽子-->
                <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="0dp" android:layout_weight="0.7">

                </LinearLayout>


            </LinearLayout>

            <!--右边区域//小饭团-->
            <LinearLayout android:layout_width="0dp" android:layout_weight="0.3" android:orientation="horizontal" android:layout_height="match_parent">

                <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:textSize="20sp" android:text="小饭团"/>

            </LinearLayout>
            <!--觅食掌厨-->
            <LinearLayout android:layout_width="0dp" android:layout_weight="0.5" android:orientation="vertical" android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">

                </LinearLayout>

                <!--觅食掌厨-->
                <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:orientation="vertical" android:layout_weight="1">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" android:layout_weight="1">

                    <TextView android:layout_width="0dp" android:text="觅食：" android:gravity="center" android:layout_height="match_parent" android:layout_weight="1.0"/>

                    <TextView android:layout_width="0dp" android:layout_height="match_parent" android:text="23" android:gravity="center|left" android:layout_weight="1.3"/>

                </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" android:layout_weight="1">

                        <TextView android:layout_width="0dp" android:text="掌厨：" android:gravity="center" android:layout_height="match_parent" android:layout_weight="1.0"/>

                        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:text="23" android:gravity="center|left" android:layout_weight="1.3"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--四个条-->
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3.2">

            <!--<!-我的饭团&ndash&;gt;-->
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:gravity="center|left" android:drawableLeft="@drawable/ico_more_account" android:text="我的饭团" android:textSize="17sp" android:layout_weight="5.1"/>
                <ImageView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7" android:src="@drawable/more_black" android:scaleType="center" />
            </LinearLayout>

            <!--线-->
            <View android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/black" android:layout_weight="0.01"/>

            <!--我请客的-->
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">

                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:gravity="center|left" android:drawableLeft="@drawable/ico_more_account" android:text="我请客的" android:textSize="17sp" android:layout_weight="5.1"/>
                <ImageView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7" android:src="@drawable/more_black" android:scaleType="center" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/black" android:layout_weight="0.01"/>

            <!--我做客的-->
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">

                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:gravity="center|left" android:drawableLeft="@drawable/ico_more_account" android:text="我做客的" android:textSize="17sp" android:layout_weight="5.1"/>
                <ImageView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7" android:src="@drawable/more_black" android:scaleType="center" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/black" android:layout_weight="0.01"/>

            <!--我赞过的-->
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:gravity="center|left" android:drawableLeft="@drawable/ico_more_account" android:text="我赞过的" android:textSize="17sp" android:layout_weight="5.1"/>
                <ImageView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7" android:src="@drawable/more_black" android:scaleType="center" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/black" android:layout_weight="0.001"/>

        </LinearLayout>

        <!--最后一个条-->
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2.9">

            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" android:layout_weight="0.3">
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/black" android:layout_weight="0.01"/>

            <!--设置-->
            <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="0dp" android:layout_weight="0.8">

                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:gravity="center|left" android:drawableLeft="@drawable/ico_more_account" android:text="设置" android:textSize="17sp" android:layout_weight="5.1"/>
                <ImageView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7" android:src="@drawable/more_black" android:scaleType="center" />

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/black" android:layout_weight="0.01"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:orientation="horizontal" android:layout_weight="1.8">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>