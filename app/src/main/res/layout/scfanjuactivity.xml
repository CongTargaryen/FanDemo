<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:layout_height="0dp">
    <RelativeLayout
        android:id="@+id/Tab"
        android:layout_weight="299"
        android:orientation="horizontal"
        android:background="@color/lightbrown"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="@color/orange"
            android:layout_below="@id/bianji"/>
     </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="9.7">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.2">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:gravity="center|left"
               android:layout_weight="1.2">

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="李家请你吃饭"
                   android:id="@+id/sc_zhuti"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_weight="0.8">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:clickable="true"
                    android:id="@+id/sc_describe"
                    android:src="@android:drawable/ic_menu_edit" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mis_default_error"
                    android:padding="@dimen/abc_action_bar_overflow_padding_start_material" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_weight="1.2">


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:id="@+id/changedesk"
                    style="@style/CardView.Dark"
                    android:clickable="true"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="10dp"
                    android:translationZ="0dp"
                    card_view:cardPreventCornerOverlap="true"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="0.01dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="生成饭局"
                        android:clickable="true"
                        android:textSize="20sp"
                        android:id="@+id/sc_button"
                        android:gravity="center"
                        android:background="@color/lightbrown"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>